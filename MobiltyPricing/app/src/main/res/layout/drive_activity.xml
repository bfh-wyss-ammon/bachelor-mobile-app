<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_height="wrap_content">

        <mps.bachelor2017.bfh.ti.ch.mobiltypricing.animations.DriveAnimation
            android:id="@+id/driveAnimation"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:layout_marginLeftPercent="25%"
            app:layout_widthPercent="50%"
            app:srcCompat="@drawable/ic_track" />

        <mps.bachelor2017.bfh.ti.ch.mobiltypricing.animations.StartAnimation
            android:layout_alignParentBottom="true"
            android:id="@+id/StopAnimation"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </android.support.percent.PercentRelativeLayout>

</LinearLayout>